public class ejercicio07 {
  public static void main (String[] args) {
    System.out.printf("%5s\n","*");
    System.out.printf("%4s%s%s\n","*"," ","*");
    System.out.printf("%3s%s%s\n","*","   ","*");
    System.out.printf("%2s%s%s\n","*","   ","*");
    System.out.printf("%1s%s%s\n","*","     ","*");

  }
}
